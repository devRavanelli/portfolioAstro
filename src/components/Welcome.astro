---
import { getLangFromUrl, useTranslations} from '../i18n/utils';


const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<section
	class="container-fluid d-flex justify-content-center text-center text-white bg-dark"
	id="inicio"
	style="height: 100vh;"
>
	<div class="contenedor">
		<div>
			<img class="foto" src="/images/sammy.png" />
		</div>
		<div class="info-btn-container">
			<div class="section-info">
				<h3>{t('info.hello')}</h3>
				<h1 class="nombre">Sammy Odeh</h1>
				<h5>{t('info.webDev')}</h5>
				<p class="section-info-parrafo">
					{t('info.parrafo')}
				</p>
			</div>
			<div class="botones">
				<button class="btn-cv">{t('info.cv')}</button>
				<button class="btn-contacto">{t('nav.contact')}</button>
			</div>
		</div>
		<div class="iconos">
			<a
				href="https://www.instagram.com/sr.samodeh"
				target="_blank"
				rel="noopener noreferrer"
			>
				<i class="fa-brands fa-instagram"></i>
			</a>
			<a
				href="https://www.linkedin.com/in/sammyodeh"
				target="_blank"
				rel="noopener noreferrer"
			>
				<i class="fa-brands fa-linkedin"></i>
			</a>
			<a
				href="https://www.github.com/devRavanelli"
				target="_blank"
				rel="noopener noreferrer"
			>
				<i class="fa-brands fa-github"></i>
			</a>
		</div>
	</div>
	<!-- Redes Sociales -->
</section>
<section
	class="container-fluid d-flex justify-content-center text-center text-white"
	id="sobre-mi"
	style="height: 100vh; background: linear-gradient(to bottom, white, #e0dfdf);"
>
	<div class="sobre-mi-seccion">
		<div class="sobre-mi-titulos">
			<h5>{t('about.aprende')}</h5>
			<h2 class="text-black">{t('about.aboutMe')}</h2>
		</div>
		<div class="sobre-mi-contenedor">
			<div>
				<img class="foto" src="/images/sammy.png" />
			</div>
			<div class="contenedor-sobre-mi-datos">
				<div class="sobre-mi-datos">
					<span class="material-symbols-outlined">
						military_tech
					</span>
					<h6>{t('about.exp')}</h6>
					<p>1+ {t('about.años')}</p>
					<p>{t('info.webDev')}</p>
				</div>
				<div class="sobre-mi-datos">
					<span class="material-symbols-outlined"> school </span>
					<h6>{t('about.educacion')}</h6>
					<p>{t('about.bachiller')}</p>
					<p>{t('about.daw')}</p>
				</div>
			</div>
		</div>
	</div>
</section>
<section
	id="proyectos"
	class="proyectos container-fluid d-flex justify-content-center text-center"
	style="height: 100vh; background: linear-gradient(to bottom, #e0dfdf, white);"
	;
>
	<div class="proyectos-seccion">
		<div class="proyectos-titulos">
			<h2 class="text-black">{t('projects.proyectos')}</h2>
		</div>
		<div class="proyectos-contenedor">
			<div class="proyecto">
				<a
					href="https://padelges-production.up.railway.app/"
					target="_blank"
					rel="noopener noreferrer"
				>
					<h3>Padel Ges</h3>
					<img class="proyectos-img" src="/images/padelGes.png" />
				</a>
				<p>
					{t('projects.parrafo1')}
				</p>
				<div class="proyecto-skills">
					<img src="/images/laravel.png" />
				</div>
			</div>
		</div>
		<h5 class="mt-5">{t('projects.habilidades')}</h5>
		<div class="skills">
			<img src="/images/html-5.png" />
			<img src="/images/css-3.png" />
			<img src="/images/js.png" />
			<img src="/images/bootstrap.png" />
			<img src="/images/php.png" />
			<img src="/images/mysql.png" />
			<img src="/images/java.png" />
		</div>
	</div>
</section>
<section
	id="contacto"
	class="contacto container-fluid d-flex justify-content-center text-center"
	style="height: 100vh; background: linear-gradient(to bottom, white, #e0dfdf);"
	;
>
	<div class="contacto-seccion">
		<div class="contacto-titulos">
			<h2 class="text-black">{t('contacto.contacta')}</h2>
			<h5>
				{t('contacto.hablo')}
				<img src="/images/spain.png" alt="España" width="24px" />
				<img src="/images/united-kingdom.png" alt="uk" width="24px" />
			</h5>
		</div>
		<div class="contacto-redes">
			
			<a
				href="https://www.instagram.com/sr.samodeh"
				target="_blank"
				rel="noopener noreferrer"
			>
				<i class="fa-brands fa-instagram"></i> {t('contacto.insta')}
			
			</a>
			
			<a
				href="https://www.linkedin.com/in/sammyodeh"
				target="_blank"
				rel="noopener noreferrer"
			>
				<i class="fa-brands fa-linkedin"></i>{t('contacto.linkedin')}
			</a>
		
		</div>
		<div class="contacto-mail">
			<h5>{t('contacto.correo')}</h5>
			<form
				action="mailto:sam_po13@hotmail.com"
				method="POST"
				enctype="text/plain"
			>
				<div class="contacto-mail-contenedor">
					<div class="contacto-input-contenedor">
						<div class="flex">
							<label for="nombre">{t('contacto.tuNombre')}</label>
							<input type="text" name="nombre" required />
						</div>
						<div class="flex">
							<label for="correo">{t('contacto.tuCorreo')}</label>
							<input type="email" name="correo" required />
						</div>
					</div>
					<div class="flex">
						<label for="mensaje">{t('contacto.tuMensaje')}</label>
						<textarea name="mensaje" required></textarea>
					</div>
				</div>
				<button type="submit">{t('contacto.enviar')}</button>
			</form>
		</div>
	</div>
</section>


<style>
	@import url("https://fonts.googleapis.com/css2?family=Changa:wght@200..800&display=swap");
	@import url("https://fonts.googleapis.com/css2?family=Wendy+One&display=swap");

	.material-symbols-outlined {
		color: black;
		font-size: 30px;
	}

	body {
		font-family: "Wendy One", serif;
	}

	.contenedor {
		margin-top: 25%;
	}

	.foto {
		width: 150px;
		border-radius: 200px;
		/* animation: bombillaFundida 3s infinite steps(1); */
	}

	@keyframes bombillaFundida {
  0% { filter: brightness(1.5); }
  10% { filter: brightness(0.3); }
  20% { filter: brightness(1.2); }
  30% { filter: brightness(0.6); }
  40% { filter: brightness(1.8); }
  50% { filter: brightness(0.1); }
  60% { filter: brightness(1.5); }
  70% { filter: brightness(0.4); }
  80% { filter: brightness(1.7); }
  90% { filter: brightness(0.2); }
  100% { filter: brightness(1.5); }
}

	.section-info {
		margin-top: 60px;
	}

	.nombre {
		color: #1abc9c;
	}

	.section-info * {
		margin-top: 10px;
	}

	.section-info h5 {
		font-family: "Changa", serif;
	}

	.section-info-parrafo {
		display: none;
	}

	.botones {
		display: flex;
		justify-content: center;
		flex-direction: column;
		gap: 10px;
	}

	/* Estilos generales de los botones */
	.btn-contacto,
	.btn-cv {
		padding: 10px 70px; /* Tamaño uniforme */
		font-size: 16px;
		font-weight: bold;
		border-radius: 5px;
		cursor: pointer;
		transition: all 0.3s ease-in-out;
		text-transform: uppercase;
		box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
		margin-top: 10px;
	}

	/* Botón Contacto */
	.btn-contacto {
		background-color: #1abc9c;
		color: black;
		border: none;
	}

	/* Botón Descargar CV */
	.btn-cv {
		color: #1abc9c;
		background-color: transparent;
		border: 2px solid #1abc9c;
	}

	/* Hover Estandarizado */
	.btn-contacto:hover,
	.btn-cv:hover {
		background-color: #16a085;
		color: black;
		transform: scale(1.05);
	}

	/* Efecto al hacer clic */
	.btn-contacto:active,
	.btn-cv:active {
		transform: scale(0.98);
	}

	.iconos {
		display: flex;
		gap: 15px;
		justify-content: center;
		margin-top: 50px;
		font-size: 30px;
	}

	a {
		text-decoration: none;
		color: inherit;
	}

	.iconos a:hover {
		color: #1abc9c;
	}

	.sobre-mi-titulos {
		margin-top: 50px;
	}

	.sobre-mi-titulos h2 {
		font-size: 60px;
	}

	.sobre-mi-titulos h5 {
		color: #757272;
		font-family: "Changa", serif;
	}

	.sobre-mi-datos {
		border: 2px solid #757272;
		border-radius: 30px;
		margin-top: 20px;
		padding: 0 40px;
		color: black;
	}

	.sobre-mi-datos span {
		margin-top: 10px;
	}

	.sobre-mi-datos h6 {
		margin-bottom: 15px;
	}

	.sobre-mi-datos p {
		color: #757272;
	}

	.sobre-mi-datos p:last-of-type {
		margin-top: -15px;
	}

	.proyectos-seccion {
		display: flex;
		flex-direction: column;
	}

	.proyectos-titulos {
		margin-top: 100px;
	}

	.proyectos-titulos h2 {
		font-size: 60px;
	}

	.proyectos-contenedor {
		margin-top: 20px;
		border: 2px solid #757272;
		border-radius: 25px;
		padding: 10px;
	}

	.proyectos-img {
		width: 200px;
	}

	.proyecto h3 {
		margin-top: 20px;
		font-family: "Changa", serif;
	}

	.proyecto p {
		color: #757272;
	}

	.proyecto-skills img {
		width: 100px;
	}

	.skills {
		margin-top: 20px;
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
		justify-content: center;
	}

	.skills img {
		width: 50px;
		margin: 0 10px;
	}

	.contacto-titulos {
		margin-top: 100px;
	}

	.contacto-titulos h2 {
		font-size: 40px;
	}

	.contacto-titulos h5 {
		color: #757272;
	}

	.contacto-redes {
		display: flex;
		flex-direction: column;
		margin-top: 50px;
		align-items: flex-start;
		gap: 10px;
	}

	.contacto-redes a {
		margin-left: 10px;
		display: flex;
		align-items: center;
	}
	.contacto-redes i {
		margin-right: 10px;
		font-size: 30px;
	}

	

	.contacto-mail {
		margin-top: 50px;
		gap: 10px;
		display: flex;
		flex-direction: column;
	}

	.flex {
		display: flex;
		flex-direction: column;
		align-items: start;
		width: 100%;
	}

	.contacto-mail-contenedor {
		display: flex;
		flex-direction: column;
		gap: 10px;
	}

	.contacto-input-contenedor {
		display: flex;
		flex-direction: column;
		gap: 10px;
	}

	.contacto-mail input,
	.contacto-mail textarea {
		width: 100%;
	}

	button {
		width: 100%;
		margin-top: 20px;
		color: black;
		background-color: #1abc9c;
		border-radius: 5px;
		transition: all 0.3s ease-in-out;
		box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
	}

	button:hover {
		background-color: #16a085;
		transform: scale(1.05);
	}

	@media screen and (min-width: 988px) {
		.contenedor {
			display: flex;
			flex-direction: row-reverse; /* Invierte el orden: imagen a la derecha, texto a la izquierda */
			justify-content: center;
			margin-top: 15%;
			gap: 100px;
		}
		.section-info {
			text-align: justify;
		}

		.section-info-parrafo {
			display: block;
			text-align: justify;
		}

		.botones {
			justify-content: start;
			flex-direction: row;
		}

		.btn-contacto,
		.btn-cv {
			width: 30%;
			font-size: 10px;
			padding: 5px 30px; /* Tamaño uniforme */
		}

		.btn-cv {
			display: block;
		}

		.foto {
			width: 320px;
		}

		.iconos {
			position: absolute;
			left: 20px; /* Ajusta según necesidad */
			top: 70%;
			transform: translateY(-50%);
			display: flex;
			flex-direction: column;
			gap: 20px;
			font-size: 30px;
		}

		.info-btn-container {
			width: 500px;
		}

		.sobre-mi-titulos {
			margin-top: 100px;
		}

		.sobre-mi-contenedor {
			display: flex;
			gap: 20px;
			margin-top: 10%;
		}

		.contenedor-sobre-mi-datos {
			display: flex;
			flex-direction: column;
			justify-content: center;
		}

		.contacto-redes{
			margin-top: 100px;
		}

		.contacto-redes a {
		margin-left: 10px;
		display: flex;
		align-items: center;
		font-size: 30px;
		margin-top: 20px;
	}
	.contacto-redes i {
		margin-right: 10px;
		font-size: 50px;
	}
	}

	@media screen and (min-width: 1250px) {
		.info-btn-container {
			width: 700px;
		}

		.btn-contacto,
		.btn-cv {
			font-size: 16px;
		}

		.section-info * {
			margin-top: 20px;
		}

		.section-info h1 {
			font-size: 50px;
			color: white;
		}

		.foto {
			width: 350px;
		}

		.section-info h5 {
			color: #1abc9c;
		}

		.sobre-mi-datos {
			border: 2px solid #757272;
			border-radius: 30px;
			margin-top: 20px;
			padding: 0 100px;
			color: black;
		}

		.sobre-mi-datos span {
			font-size: 50px;
		}

		.sobre-mi-datos h6 {
			font-size: 30px;
		}

		.sobre-mi-datos p {
			font-size: 20px;
		}
		.sobre-mi-contenedor {
			gap: 70px;
		}

		.contacto-seccion {
			width: 80%;
		}
		.contacto-titulos h2 {
			font-size: 60px;
		}

		.contacto-mail {
			margin-top: 150px;
		}

		.contacto-mail-contenedor {
			flex-direction: row;
			gap: 50px;
		}

		.contacto-input-contenedor {
			display: flex;
			flex-direction: column; /* Mantiene los inputs en columna */
			width: 50%; /* Hace que los inputs ocupen la mitad del ancho */
		}

		textarea {
			height: 96px;
		}

		button {
			width: 10%;
		}
	}
</style>
