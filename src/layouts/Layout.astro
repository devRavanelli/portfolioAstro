---
import { getLangFromUrl, useTranslations} from '../i18n/utils';

import LanguagePicker from '../components/LanguagePicker.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---


<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
		/>

		<meta name="generator" content={Astro.generator} />
		<title>Portfolio Sammy Odeh</title>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
		/>
	</head>
	<body>
		<!-- Header -->

		<header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
			<div
				class="container d-flex justify-content-between align-items-center"
			>
				<!-- Logo -->
				<a class="navbar-brand me-5" href="#">
					<img
						src="/images/logo3.png"
						alt="logo"
						class="img-fluid"
						style="max-width: 150px;"
					/>
				</a>

				<!-- Botón de menú en pantallas pequeñas -->
				<button
					class="navbar-toggler"
					type="button"
					data-bs-toggle="collapse"
					data-bs-target="#navbarNav"
				>
					<i class="fa-solid fa-bars"></i>
				</button>

				<!-- Links de navegación -->
				<div class="collapse navbar-collapse order-lg-1" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<!-- Aquí añadimos ms-auto a la lista -->
						<li class="nav-item">
							<a class="nav-link text-white me-4" href='/#inicio'
								>{t('nav.home')}</a
							>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white me-4" href="#sobre-mi"
								>{t('nav.about')}</a
							>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white me-4" href="#proyectos"
								>{t('nav.projects')}</a
							>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white me-4" href="#contacto"
								>{t('nav.contact')}</a
							>
						</li>

						<!-- Selector de idioma (Dropdown) -->
						<LanguagePicker />
					</ul>
				</div>
			</div>
		</header>

		<!-- Contenido de la página -->
		<main>
			<slot />
		</main>
		

		<!-- Agregar el script de Bootstrap -->
		<script
			src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.0/dist/sweetalert2.all.min.js" defer
		></script>
		<script src="/js/contacto.js" defer></script>
		<script src="/js/descargarCv.js" defer></script>
		<script src="/js/efectos.js" defer></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
		></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.dropdown-menu {
		min-width: 5rem; /* Ajusta el ancho mínimo del dropdown */
		width: auto; /* El ancho se ajusta automáticamente al contenido */
	}

	.navbar-toggler i {
		color: #1abc9c;
		font-size: 1.5rem;
	}

	/* Estilos para los enlaces */
	.nav-link {
		position: relative;
		text-decoration: none; /* Quitar el subrayado predeterminado */
	}

	/* Estilo del subrayado */
	.nav-link::after {
		content: "";
		position: absolute;
		width: 0;
		height: 2px;
		bottom: 0;
		left: 0;
		background-color: #1abc9c; /* Color de subrayado */
		transition: width 0.3s ease; /* Animación suave */
	}

	/* Efecto hover */
	.nav-link:hover::after {
		width: 100%; /* Expande el subrayado al 100% al hacer hover */
	}

	.nav-link:hover {
		color: #1abc9c; /* Cambiar el color del texto en hover */
	}
</style>
